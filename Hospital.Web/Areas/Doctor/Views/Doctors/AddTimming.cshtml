@using Hospital.Models
@model Hospital.ViewModels.TimmingViewModel

@{
    ViewData["Title"] = "AddTimming";
}

<h1>AddTimming</h1>

<h4>TimmingViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTimming">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Doctor" class="control-label"></label>
                <input asp-for="Doctor" class="form-control" />
                <span asp-validation-for="Doctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleDate" class="control-label"></label>
                <input asp-for="ScheduleDate" class="form-control" />
                <span asp-validation-for="ScheduleDate" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Status" asp-items="@Html.GetEnumSelectList<Status>()" class="control-label"></select>
                <label asp-for="Status"></label>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MorningShiftStartTime"></label>
                <select asp-for="MorningShiftStartTime" asp-items="@ViewBag.morningStart"></select>
            </div>
            <div class="form-group">
                <label asp-for="MorningShiftEndTime"></label>
                <select asp-for="MorningShiftStartTime" asp-items="@ViewBag.morningeND"></select>
            </div>
            <div class="form-group">
                <label asp-for="AfternoonShiftStartTime"></label>
                <select asp-for="AfternoonShiftStartTime" asp-items="@ViewBag.afternoonStart"></select>
            </div>
            <div class="form-group">
                <label asp-for="AfternoonShiftEndTime"></label>
                <select asp-for="AfternoonShiftEndTime" asp-items="@ViewBag.afternoonEnd"></select>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

